# Upstash Redis (free tier - https://upstash.com)
UPSTASH_REDIS_URL=redis://default:xxx@xxx.upstash.io:6379

# Cloudflare R2 (free tier - https://dash.cloudflare.com/r2)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=autopromo-videos
R2_PUBLIC_URL=https://pub-xxx.r2.dev

# Optional: OpenAI for AI-generated captions (Phase 2)
# OPENAI_API_KEY=sk-...

# Server configuration
PORT=3000
NODE_ENV=development

# Rate limiting (jobs per hour per IP)
RATE_LIMIT_HOURS=1
RATE_LIMIT_MAX_JOBS=1

# Video settings
MAX_VIDEO_DURATION=60
DEFAULT_VIDEO_DURATION=15
VIDEO_CLEANUP_HOURS=24
